<%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name, label: 'Restaurant name', placeholder: 'New restaurant'%>
    <%= f.input :address, label: 'Enter restaurant full address', placeholder: 'Avenida Paulista 1200'%>
    <%= f.input :phone_number, label: 'Enter phone number', placeholder: '+55 11 9999-999' %>
    <%= f.input :category, collection: CATEGORIES, label: 'Select category', error: 'Please select a category' %>
    <%= f.submit input_html: { class: 'btn btn-primary w-100' } %>
<% end %>
