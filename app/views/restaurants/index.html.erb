<%= link_to('Add new Restaurant',  new_restaurant_path, class: 'btn btn-primary btn-block my-1') %>
<table class="table table-hover table-responsive">
    <thead class="thead-dark">
        <th class="text-center" scope="col">#</th>
        <th class="text-center" scope="col">Name</th>
        <th class="text-center" scope="col">Address</th>
        <th class="text-center" scope="col">Phone Number</th>
        <th class="text-center" scope="col">Category</th>
        <th class="text-center" scope="col">Reviews</th>
        <th class="text-center" scope="col"><i class="fas fa-eye"></i></th>
        <th class="text-center" scope="col"></th>
    </thead>
    <tbody>
        <% @restaurants.each_with_index do |restaurant, index| %>
            <tr scope="row">
                <td class="text-center"><%= index + 1 %></td>
                <td><%= restaurant.name %></td>
                <td><%= restaurant.address %></td>
                <td><%= restaurant.phone_number %></td>
                <td><%= restaurant.category %></td>
                <td class="text-center"><%= restaurant.reviews.count %></td>
                <td><%= link_to restaurant_path(restaurant) do %>
                        <i class="fas fa-eye"></i>
                     <% end %>
                </td>
                <td><%= link_to "Add Review", new_restaurant_review_path(restaurant) %></td>
            </tr>
        <% end %>
    </tbody>
</table>
